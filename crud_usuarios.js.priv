const express = require('express');
const fs = require('fs');
const cors = require('cors');
const { v4: uuidv4 } = require('uuid');

const app = express();
const PORT = 3001;
const ARQUIVO = 'usuarios.json';

app.use(cors());
app.use(express.json());

// ðŸ§¾ FunÃ§Ã£o utilitÃ¡ria
function lerUsuarios() {
  const data = fs.readFileSync(ARQUIVO, 'utf8');
  return JSON.parse(data);
}

function salvarUsuarios(usuarios) {
  fs.writeFileSync(ARQUIVO, JSON.stringify(usuarios, null, 2), 'utf8');
}

// ðŸ” Listar usuÃ¡rios
app.get('/usuarios', (req, res) => {
  const usuarios = lerUsuarios();
  res.json(usuarios);
});

// âž• Inserir novo usuÃ¡rio
app.post('/usuarios', (req, res) => {
  const usuarios = lerUsuarios();
  const novoUsuario = {
    id: uuidv4(),
    nome: req.body.nome,
    idade: req.body.idade,
    endereco: req.body.endereco,
    email: req.body.email
  };
  usuarios.push(novoUsuario);
  salvarUsuarios(usuarios);
  res.status(201).json(novoUsuario);
});

// âœï¸ Atualizar usuÃ¡rio por ID
app.put('/usuarios/:id', (req, res) => {
  let usuarios = lerUsuarios();
  const index = usuarios.findIndex(u => u.id === req.params.id);

  if (index === -1) {
    return res.status(404).json({ erro: 'UsuÃ¡rio nÃ£o encontrado' });
  }

  usuarios[index] = { ...usuarios[index], ...req.body };
  salvarUsuarios(usuarios);
  res.json(usuarios[index]);
});

// âŒ Deletar usuÃ¡rio por ID
app.delete('/usuarios/:id', (req, res) => {
  let usuarios = lerUsuarios();
  const index = usuarios.findIndex(u => u.id === req.params.id);

  if (index === -1) {
    return res.status(404).json({ erro: 'UsuÃ¡rio nÃ£o encontrado' });
  }

  const removido = usuarios.splice(index, 1)[0];
  salvarUsuarios(usuarios);
  res.json(removido);
});

// ðŸ Iniciar servidor
app.listen(PORT, () => {
  console.log(`ðŸš€ CRUD rodando em http://localhost:${PORT}`);
});
